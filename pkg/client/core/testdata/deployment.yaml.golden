apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-app
  namespace: okctl
spec:
  replicas: 1
  selector:
    matchLabels:
      app: my-app
  template:
    metadata:
      labels:
        app: my-app
    spec:
      containers:
      - name: my-app
        resources:
          limits:
            cpu: 200m
            memory: 256Mi
          requests:
            cpu: 100m
            memory: 128Mi
        volumeMounts:
        - mountPath: /path/to/mount/volume
          name: my-app-pathtomountvolume
      dnsPolicy: Default
      volumes:
      - name: my-app-pathtomountvolume
        persistentVolumeClaim:
          claimName: my-app-pathtomountvolume

---

