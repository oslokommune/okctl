apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-app
  namespace: okctl
spec:
  replicas: 1
  selector:
    matchLabels:
      app: my-app
  template:
    metadata:
      labels:
        app: my-app
    spec:
      containers:
      - livenessProbe:
          failureThreshold: 10
          httpGet:
            path: /
            port: 3000
            scheme: HTTP
          initialDelaySeconds: 15
          periodSeconds: 10
          timeoutSeconds: 5
        name: my-app
        readinessProbe:
          failureThreshold: 10
          httpGet:
            path: /
            port: 3000
            scheme: HTTP
          initialDelaySeconds: 15
          periodSeconds: 10
          timeoutSeconds: 5
        resources:
          limits:
            cpu: 200m
            memory: 256Mi
          requests:
            cpu: 100m
            memory: 128Mi
        volumeMounts:
        - mountPath: /path/to/mount/volume
          name: my-app-pathtomountvolume
      dnsPolicy: Default
      terminationGracePeriodSeconds: 30
      volumes:
      - name: my-app-pathtomountvolume
        persistentVolumeClaim:
          claimName: my-app-pathtomountvolume

---

