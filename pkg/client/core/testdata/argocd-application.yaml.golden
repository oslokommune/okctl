apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: my-app
  namespace: argocd
spec:
  destination:
    namespace: okctl
    server: https://kubernetes.default.svc
  project: default
  source:
    path: infrastructure/applications/my-app/overlays/test
    repoURL: git@dummy.com:test/repo.git
    targetRevision: HEAD
  syncPolicy:
    automated:
      prune: false
      selfHeal: false

---

